# Configurações de IA (Agnóstico de Plataforma)
AI_API_TOKEN=seu_token_aqui

# Endpoints (Padrão Chutes.ai)
AI_LLM_URL=https://llm.chutes.ai/v1/chat/completions
AI_EMBEDDING_URL=https://llm.chutes.ai/v1/embeddings

# Modelos Solicitados
AI_LLM_MODEL=NousResearch/Hermes-4-405B-FP8-TEE
AI_EMBEDDING_MODEL=Qwen/Qwen3-Embedding-8B


# Configuração JWT (RS256 - Assimétrico)
# Use JWKS_URL para validação dinâmica OU JWT_PUBLIC_KEY para chave estática

# URL do endpoint JWKS para obter as chaves públicas via rede interna do Docker.
# A API FastAPI usa este endereço para "ligar" para o container janus_service.
AUTH_JWKS_URL=http://janus_service:3000/oidc/jwks

# Chave pública RSA para assinatura RS256 (opcional - chaves serão geradas automaticamente se não fornecidas)
# Em produção, defina estas variáveis de ambiente com suas chaves no formato PEM codificadas em Base64
JWT_PUBLIC_KEY=placeholder

# Algoritmo JWT (padrão: RS256 para Janus)
JWT_ALGORITHM=RS256

# Emissor JWT (O valor 'iss' dentro do token). Deve ser idêntico à ISSUER_URL do Janus.
# No ambiente local, o token é emitido via localhost para ser válido no navegador.
AUTH_ISSUER_URL=http://localhost:3000/oidc


# Configuração do Janus Service (Sincronização de Usuários)
# URL base do serviço Janus para sincronização de usuários
JANUS_API_URL=http://janus-service:3001

# Chave de API do serviço Janus para autenticação entre serviços
JANUS_SERVICE_API_KEY=your_janus_service_api_key_here


# Configuração RabbitMQ
RABBIT_USER=guest
RABBIT_PASS=guest
RABBIT_HOST=ux_auditor_rabbitmq
RABBIT_PORT=5672

# Nome da fila RabbitMQ para eventos brutos de sessão
RABBITMQ_QUEUE=raw_sessions

# Configuração S3/Garage (Storage)
# Endpoint do Garage (Storage compatível com S3)
GARAGE_ENDPOINT=http://localhost:3900

# Chave de acesso do Garage
GARAGE_ACCESS_KEY=your_access_key_here

# Chave secreta do Garage
GARAGE_SECRET_KEY=your_secret_key_here

# Nome do bucket para armazenar as sessões
GARAGE_BUCKET=ux-auditor-sessions

# Região do Garage (padrão: us-east-1)
GARAGE_REGION=us-east-1


# Configuração da Aplicação
# Host da aplicação (padrão: 0.0.0.0)
APP_HOST=0.0.0.0

# Porta da aplicação (padrão: 8000)
APP_PORT=8000


# Configuração PostgreSQL (Prisma ORM)
# Configurações do banco de dados PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ux_auditor
POSTGRES_HOST=ux_auditor_api_db
POSTGRES_PORT=5432

# URL de conexão com o banco de dados PostgreSQL (formada automaticamente)
# Formato: postgresql://usuario:senha@host:porta/database
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}
